{
    "name": "zing/laravel-flysystem-obs",
    "description": "Flysystem Adapter for OBS",
    "keywords": ["laravel", "flysystem", "obs"],
    "license": "MIT",
    "authors": [
        {
            "name": "zingimmick",
            "email": "zingimmick@outlook.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0",
        "zing/flysystem-obs": "^1.0.1"
    },
    "require-dev": {
        "mockery/mockery": "~1.3.3 || ^1.4.2",
        "nunomaduro/larastan": "^0.7.2 || ^1.0.0",
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0",
        "phpunit/phpunit": "^8.0,<8.5.12 || ^9.3.3",
        "zing/coding-standard": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Zing\\LaravelFlysystem\\Obs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zing\\LaravelFlysystem\\Obs\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint:rector": "@fix:rector --dry-run",
        "lint:ecs": "ecs check --ansi",
        "lint:phpstan": "phpstan analyse --ansi",
        "fix:rector": "rector process --ansi",
        "fix:ecs": "@lint:ecs --fix",
        "test:phpunit": "phpunit --colors=always",
        "lint": [
            "@lint:rector",
            "@lint:ecs",
            "@lint:phpstan"
        ],
        "fix": [
            "@fix:rector",
            "@fix:ecs"
        ],
        "test": [
            "@test:phpunit"
        ],
        "changelog": [
            "changelog-linker dump-merges --ansi",
            "changelog-linker link --ansi",
            "changelog-linker cleanup --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zing\\LaravelFlysystem\\Obs\\ObsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
